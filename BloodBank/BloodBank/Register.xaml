<Window x:Class="BloodBank.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BloodBank"
        mc:Ignorable="d"
        Title="Register" Height="180" Width="450" ResizeMode="NoResize">
    <Grid>
        <DockPanel>
            <StackPanel DockPanel.Dock="Left">
                <Label Content="Ime"/>
                <Label Content="Prezime"/>
                <Label Content="Godine"/>
                <Label Content="Musko?"/>
                <Label Content="Krvna Grupa"/>
            </StackPanel>
            <StackPanel DockPanel.Dock="Right">
                <TextBox Name="Ime" Height="25"/>
                <TextBox Name="Prezime" Height="25"/>
                <TextBox Name="Godine" Height="30"/>
                <CheckBox Name="Pol" Width="367"></CheckBox>
                <ComboBox Name="KrvneGrupe"/>
                <Button Name="Unesi" Content="Unesi" Click="Unesi_Click"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
